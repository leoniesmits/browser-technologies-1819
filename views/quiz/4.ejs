        <label for="yes">yes</label>

        <h2>Do you wear make-up?</h2>
        <input type="radio" id="43" name="makeup" value="no">
        <label for="no">no</label>
        <input type="radio" id="44" name="makeup" value="yes">
        <label for="yes">yes</label>


        <input type="radio" id="12" name="routine_length" value="medium">
        <label for="Medium">Medium</label>
        <input type="radio" id="13" name="routine_length" value="short">
        <label for="short">Short</label>

        <a href="/quiz/3">go back</a>
        <input type="submit" value="submit">
    </form>

</body>
</html>